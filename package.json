{
  "name": "electron__player",
  "version": "1.0.0",
  "description": "A minimal React Electron application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "test": "jest -u --watchAll",
    "build": "webpack --progress --colors --config ./webpack.build-config.js --mode production",
    "watch": "webpack-dev-server --progress --colors --hot --config ./webpack.config.js --mode development"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arman37/electron-player"
  },
  "keywords": [
    "Electron",
    "player",
    "react"
  ],
  "author": "Arman Bhuiyan <arman.it37@gmail.com>",
  "license": "ISC",
  "build": {
    "productName": "Electron Player",
    "appId": "electronplayerid",
    "files": [
      "dist/",
      "node_modules/",
      "main.js",
      "package.json"
    ],
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "deb",
        "AppImage"
      ]
    },
    "directories": {
      "buildResources": "resources",
      "output": "release"
    }
  },
  "babel": {
    "presets": [
      "env",
      "react",
      "stage-2"
    ]
  },
  "devDependencies": {
    "babel-core": "^6.26.2",
    "babel-jest": "^22.4.3",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "electron": "^1.8.6",
    "enzyme": "^3.3.0",
    "enzyme-to-json": "^3.3.3",
    "jest": "^22.4.3",
    "react-addons-test-utils": "^15.6.2",
    "react-hot-loader": "^4.1.2",
    "react-test-renderer": "^16.3.2",
    "webpack": "^4.6.0",
    "webpack-cli": "^2.0.15",
    "webpack-dev-server": "^3.1.3"
  },
  "dependencies": {
    "base64-js": "^1.3.0",
    "classnames": "^2.2.5",
    "drivelist": "^6.1.7",
    "electron-config": "^1.0.0",
    "immutable": "^3.8.2",
    "material-ui": "^0.20.0",
    "musicmetadata": "^2.0.5",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-redux": "^5.0.7",
    "react-sound": "^1.1.0",
    "react-tap-event-plugin": "^3.0.2",
    "reactjs-coverflow": "^1.1.0",
    "readdirp": "^2.1.0",
    "redux": "^4.0.0",
    "redux-thunk": "^2.2.0",
    "soundmanager2": "^2.97.20170602",
    "styled-components": "^3.2.6"
  }
}
